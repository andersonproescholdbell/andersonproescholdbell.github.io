---
import ProjectPageLayout from '../../../layouts/ProjectPageLayout.astro';

const title = "Catan Board Generator";
const description = "A Catan board generator that creates balanced and strategic board layouts with advanced algorithms for terrain and roll placement.";
---

<ProjectPageLayout title={title} description={description}>
  <style>
    @import '/src/config/design-tokens.css';
    
    #container {
        height: 100%;
        width: 100%;
        background-color: #1f3a33;
        display: flex;
        flex-direction: column;
    }

    #container2 {
        height: 100%;
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        padding: 1rem;
        box-sizing: border-box;
        flex: 1;
        min-height: 0;
    }

    #canvas {
        max-height: 100%;
        max-width: 100%;
        flex-shrink: 1;
        object-fit: contain;
    }

    #infoContainer {
        min-width: 250px;
        max-width: 300px;
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        padding: 1rem;
        background-color: rgba(0,0,0,0.2);
        border-radius: 8px;
        height: fit-content;
        max-height: 100%;
        overflow-y: auto;
        flex-shrink: 0;
    }

    label {
        display: block;
        color: #cf3838;
        font-weight: bold;
        margin-bottom: 0.25rem;
        font-size: 0.9rem;
    }

    textarea {
        display: block;
        background-color: rgba(255,255,255,0.1);
        color: white;
        border: 1px solid #555;
        border-radius: 4px;
        padding: 0.5rem;
        font-family: monospace;
        resize: vertical;
        min-height: 60px;
    }

    input {
        background-color: rgba(255,255,255,0.1);
        color: white;
        border: 1px solid #555;
        border-radius: 4px;
        padding: 0.5rem;
        font-family: monospace;
    }

    button {
        background-color: #cf3838;
        color: white;
        border: none;
        border-radius: 4px;
        padding: 0.75rem 1rem;
        cursor: pointer;
        font-weight: bold;
        margin-bottom: 1rem;
    }

    button:hover {
        background-color: #b02d2d;
    }

    /* Mobile responsive layout */
    @media (max-width: 768px) {
      #container2 {
        flex-direction: column;
        gap: 1rem;
        padding: 0.5rem;
      }
      
      #canvas {
        width: 100%;
        height: 60vh;
        flex-shrink: 0;
      }
      
      #infoContainer {
        width: 100%;
        max-width: none;
        min-width: unset;
        max-height: 40vh;
        flex-shrink: 0;
      }
      
      textarea {
        min-height: 40px;
        font-size: 12px;
      }
      
      label {
        font-size: 0.8rem;
      }
      
      input {
        font-size: 12px;
        padding: 0.4rem;
      }
      
      button {
        padding: 0.6rem 0.8rem;
        font-size: 0.9rem;
      }
    }
  </style>

  <div id="container">
    <div id="container2"> 
      <canvas id="canvas"></canvas>
      <div id="infoContainer">
        <button onclick="main()">Refresh Map</button>
        <label for="map">Map Pattern</label>
        <textarea id="map" cols="12" rows="10">_-wwww,&#013;&#010;-wlllw,&#013;&#010;_wllllw,&#013;&#010;wlllllw,&#013;&#010;_wllllw,&#013;&#010;-wlllw,&#013;&#010;_-wwww</textarea>
        <label for="tile">Tile Ratio</label>
        <input id="tile" value="f,f,f,f,s,s,s,s,w,w,w,w,o,o,o,b,b,b,d"/>
        <label for="port">Port Ratio</label>
        <input id="port" value="fsobw3333"/>
        <label for="roll">Roll Ratio</label>
        <input id="roll" value="2,3,3,4,4,5,5,6,6,8,8,9,9,10,10,11,11,12"/>
      </div>
    </div>
  </div>

  <script is:inline src="/scripts/catan-board-generator/script.js"></script>
</ProjectPageLayout>