---
import ProjectCard from '../components/ProjectCard.astro';
import ProjectGridPageLayout from '../layouts/ProjectGridPageLayout.astro';
import { projects } from '../data/portfolio/projects';
---

<ProjectGridPageLayout 
	pageTitle="Project Portfolio"
	description="A showcase of my software development projects and creative work"
>
	{projects.map(project => (
		<ProjectCard
			title={project.title}
			description={project.description}
			link={project.link}
			tags={project.tags}
			color={project.color}
		/>
	))}
</ProjectGridPageLayout>
