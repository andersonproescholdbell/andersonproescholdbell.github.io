---
import ProjectCard from '../components/ProjectCard.astro';
import ProjectGridPageLayout from '../layouts/ProjectGridPageLayout.astro';
import { projectData } from '../data/portfolio/projects';

const categories = Object.entries(projectData);
---

<ProjectGridPageLayout 
	pageTitle="Project Portfolio"
	description="A showcase of my software development projects and creative work"
>
	{categories.map(([slug, category]) => (
		<ProjectCard
			title={category.title}
			description={category.description}
			link={`/${slug}/`}
			placeholderText={category.placeholderText}
			tags={[`${category.projects.length} Projects`]}
			color={category.color}
		/>
	))}
</ProjectGridPageLayout>
