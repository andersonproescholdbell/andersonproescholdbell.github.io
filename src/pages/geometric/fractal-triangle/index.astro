const title = "Sierpinski's Triangle";
const description = "Interactive visualization of Sierpinski's Triangle using the chaos game algorithm with customizable parameters.";
---

<ProjectPageLayout title={title} description={description}>
  <iframe
    src="/geometric/fractal-triangle/app.html"
    frameborder="0"
    class="project-iframe"
  ></iframe>
</ProjectPageLayout>

<style>
  .project-iframe {
    width: 100%;
    height: 100%;
    border: none;
  }
</style>