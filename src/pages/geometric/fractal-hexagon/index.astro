---
import ProjectPageLayout from '../../../layouts/ProjectPageLayout.astro';

const title = "Hexagon Fractal";
const description = "Hexagon fractal visualization using chaos game with rule: cannot select the same vertex twice in a row.";
---

<ProjectPageLayout title={title} description={description}>
  <style>
    @import '/src/styles/nav-heights.css';
    
    /* Ensure full height usage */
    #geometric-app {
      width: 100%;
      height: 100%;
      position: relative;
      overflow: hidden;
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    #canvasContainer {
      width: 100%;
      height: 100%;
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    #ctx {
      display: block;
      width: 100%;
      height: 100%;
      margin: 0;
      padding: 0;
    }
  </style>

  <div id="geometric-app">
    <div id="canvasContainer">
      <canvas id="ctx" width="10" height="10"></canvas>
    </div>
  </div>

  <!-- Load Vue.js from CDN -->
  <script is:inline src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
  
  <!-- Load the Hexagon Fractal script -->
  <script is:inline src="/scripts/fractal-hexagon/script.js"></script>
</ProjectPageLayout>