---
import ProjectCard from '../../components/ProjectCard.astro';
import ProjectGridPageLayout from '../../layouts/ProjectGridPageLayout.astro';

const wordleVariants = [
  {
    title: "Basic",
    description: "A rough version of the original.",
    link: "/wordle/basic/",
    tags: ["JavaScript", "CSS", "Game"],
    color: "emerald" as const
  },
  {
    title: "Enhanced",
    description: "Advanced features, animations, and customizable gameplay.",
    link: "/wordle/enhanced/",
    tags: ["JavaScript", "Animations", "Configurable", "Statistics"],
    color: "purple" as const
  }
];
---

<ProjectGridPageLayout 
	pageTitle="Wordle Variants - Project Portfolio"
	description="Different versions of the Wordle word guessing game"
	backLinkHref="/"
	backLinkText="← Back to Portfolio"
>
	{wordleVariants.map((variant) => (
		<ProjectCard 
			title={variant.title}
			description={variant.description}
			link={variant.link}
			tags={variant.tags}
			color={variant.color}
		/>
	))}
</ProjectGridPageLayout>