---
export interface Props {
  backText?: string;
  backHref?: string;
}

const { 
  backText = "‚Üê Back", 
  backHref = "/"
} = Astro.props;
---

<nav class="universal-nav">
  <div class="universal-nav-container">
    <a href={backHref} class="universal-nav-back">
      {backText}
    </a>
  </div>
</nav>

<style>
  .universal-nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: 2rem; /* Based on text height + padding */
    background-color: rgba(17, 24, 39, 0.95); /* bg-gray-900 with transparency */
    backdrop-filter: blur(8px);
    border-bottom: 1px solid rgba(55, 65, 81, 0.3); /* subtle border */
    z-index: 1000;
    display: flex;
    align-items: center;
    font-family: 'Inter', sans-serif;
  }

  .universal-nav-container {
    width: 100%;
    margin: 0 auto;
    padding: 0;
    display: flex;
  }

  .universal-nav-back {
    color: #60a5fa; /* text-blue-400 */
    text-decoration: none;
    font-size: 0.875rem; /* text-sm */
    font-weight: 500;
    padding: 0rem 0.75rem;
    border-radius: 0.375rem;
    transition: all 0.2s ease;
    display: inline-flex;
    align-items: center;
  }

  .universal-nav-back:hover {
    color: #93c5fd; /* text-blue-300 */
    background-color: rgba(96, 165, 250, 0.1);
  }

  .universal-nav-back:focus {
    outline: 2px solid rgba(96, 165, 250, 0.5);
    outline-offset: 2px;
  }

  /* Mobile responsiveness */
  @media (max-width: 768px) {
    .universal-nav {
      height: 1.5rem; /* Slightly smaller on mobile */
    }

    .universal-nav-container {
      padding: 0 1rem;
    }

    .universal-nav-back {
      font-size: 0.8rem;
      padding: 0.375rem 0.5rem;
    }
  }
</style>